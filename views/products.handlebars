   <h1>Add Product</h1>
<form action="products/add" method="POST" class="form-inline" >
  <div class="form-group form-group-sm">

    <label for="text" class="control-label col-xs-3">Product:</label>   
     <div class="col-xs-3">
      <input type="text" name="product_name" value="{{product_name}}" class="form-control" placeholder="Please Enter product name" required>
    </div>
  </div>

<div class="form-group">
    <label class="control-label col-xs-3">Category:</label>
    <div class="col-xs-3">   
          <select name="Category_Id">
           {{#categories}}
            <option value = "{{Id}}">{{category_name}}</option>
            {{/categories}}
        </select>
    </div>

  </div>
<input type ="submit" class="btn btn-success" id="enter" onclick="myFunction()">  

</form>
<!-- < create a search Ajax search> -->
<div class="well well-sm"> 

<form class="form-inline" >
  <input class="searchBar" id="search" type="text" name="searchValue" placeholder="Search"></input>
</form>

</div> 


<h2>Products</h2>
<table class = "table" id = "searchProduct">

<tr>
     <th>Product Id</th>
     <th>Product Name</th>
     <th>Category Name</th>
</tr>
{{#products}}
  <tr>
  <td>{{Id}}</td>
  <td>{{product_name}}</td>
  <td>{{category_name}}</td>

  {{#if ../Admin}}
 <td> <a href="/products/edit/{{Id}}" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
 <td> <a href="/products/delete/{{Id}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</a></td>
<tr>
  {{/if}}
{{/products}}



</table>
