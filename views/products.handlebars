
<form action="products/add" method="POST" class="form-inline" >
  <div class="form-group form-group-sm">

    <label for="text" class="control-label col-xs-3">Product:</label>   
     <div class="col-xs-3">
      <input type="text" name="product_name" value="{{product_name}}" class="form-control" placeholder="Please Enter product name" required>
    </div>
  </div>

<div class="form-group">
    <label class="control-label col-xs-3">Category:</label>
    <div class="col-xs-3">   
          <select name="Category_Id">
           {{#categories}}
            <option value = "{{Id}}">{{category_name}}</option>
            {{/categories}}
        </select>
    </div>

  </div>
<input type ="submit" class="btn btn-success" id="enter" onclick="myFunction()">  

</form>
<!-- HTML for SEARCH BAR -->

  <div id="tfheader">
    <form id="tfnewsearch" method="get" action="http://www.google.com">
            <input type="text" class="tftextinput " name="q"  placeholder="search ..." size="50" maxlength="120">
          
         <button type="button" class="btn btn-primary btn-xs">search</button> 
           
    </form> 
      <div class="tfclear"></div>

  </div>




<h2>Products</h2>
<table class = "table" id = "Products List">

<tr>
     <th>Product Id</th>
     <th>Product Name</th>
     <th>Category Name</th>
</tr>
{{#products}}
  <tr>
  <td>{{Id}}</td>
  <td>{{product_name}}</td>
  <td>{{category_name}}</td>
 <td> <a href="/products/edit/{{Id}}" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
 <td> <a href="/products/delete/{{Id}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</a></td>
<tr>
{{/products}}

{{#no_products}}
  <p>No products available yet. Add some above.</p>
{{/no_products}}

</table>
