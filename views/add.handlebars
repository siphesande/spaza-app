<h2>Add Product</h2>


<form action="products/add" method="POST" class="form-horizontal" >
 	<div class="form-group">
		<label for="text" class="control-label col-xs-2">Product</label>	 
		 <div class="col-xs-5">
			<input type="text" name="product_name" value="{{product_name}}" class="form-control" placeholder="Please Enter product name" required>
		</div>
	</div>

<div class="form-group">
		<label class="control-label col-xs-2">Category</label>
		<div class="col-xs-5">	 
     			<select name="Id">
    				{{#each category}}
      					<option value = "{{Id}}">{{category_name}}</option>
    				{{/each}}
  			</select>
		</div>

	</div>

<input type="submit" class="btn btn-success" id="enter" onclick="myFunction()">  
