<div id="tfheader">
    <form id="tfnewsearch" role="search" method="post" action="/categories/CategorySearching">

            <input type="text" class="tftextinput " name="searchVar" placeholder="search ..." size="50" maxlength="120">
          
         <button type="submit" class="btn btn-primary btn-xs">search</button> 
         
          
    </form> 
          <div class="tfclear"></div>

  </div>

  <h2>Categories</h2>
<table class = "table" id = "Categories">
  <tr>
       <th>Category Id</th>
       <th>Category Name</th>
  </tr>
{{#search_categories}}
<tr>
  <td>{{Id}}</td>
  <td>{{category_name}}</td>
  <td><a href="/categories/edit/{{Id}}" class ="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
  <td><a href="/categories/delete/{{Id}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete </a></td>
</tr>

{{/search_categories}}

{{#no_categories}}
  <p>No products available yet. Add some above.</p>
{{/no_categories}}

</table>
