
<h1>Add</h1>

<form action="/products/add" method="POST">
	Description: <input type="text" name="product_name" value="{{product_name}}">
	
	<select name="category_id">
		{{#categories}}
     <option value="{{category_id}}">{{category_name}}</option>
      {{/categories}}
   </select>


	<input type="submit">
</form>

<h1>Products</h1>
{{#products}}
  <h2>{{product_name}}</h2>
  <h2>{{category_name}}</h2>
  <a href="/products/edit/{{product_id}}">Edit</a>
  <a href="/products/delete/{{product_id}}">Delete</a>
{{/products}}

