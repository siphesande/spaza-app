
<table class="table">

    <tr>
        <th>Username</th>
        <th>Role</th>
    </tr>
  

        <tr>
            <form action="/user/update/{{Id}}" method="post">
              {{#each User}}
                <td>{{username}}</td>

                <td>{{role}}</td>

                <td>
                <select name="role">
                <option value="View">View</option>
                <option value="Admin">Admin</option>
                </select></td>
                <td>
                    <input type='submit' value='submit'></input>
                </td>
            </form>
            <td><button><a href="/user/edit/{{Id}}">Edit</a></button></td>
            <td><button><a href="/user/delete/{{Id}}">Delete</a></button> </td>
        </tr>

    {{/each}}
</table>

