<h2>Add Supplier</h2>

<form action="suppliers/add" method="POST" class="form-inline" >
      
<div class="form-group form-group-sm">
    <label for="text" class="control-label col-xs-3"> Supplier:</label>
      <div class="col-xs-3">   
          <input type="text" step="any" name="supplier_name" value ="{{supplier_name}}" class="form-control" placeholder="Enter supplier name" required>
     </div>
</div>

  
  <input type="submit" class="btn btn-success" id="enter" onclick="myFunction()">  
</form>

<!-- HTML for SEARCH BAR -->
<div id="tfheader">
    <form id="tfnewsearch" role="search" method="post" action="/suppliers/searchSuppliers">

    <input type="text" class="tftextinput " name="searchVar" placeholder="search ..." size="50" maxlength="120">
          
    <button type="submit" class="btn btn-primary btn-xs">search</button> 
         
    </form> 
  <div class="tfclear"></div>
</div>


<h2>Suppliers</h2>
<table class ="table" id = "suppliers">
  </tr>
       <th>Supplier Id</th>
       <th>Supplier Name</th>
  </tr>
{{#suppliers}}
<tr>
  <th>{{Id}}</th>
  <th>{{supplier_name}}</th>

  {{#if ../Admin}}
  <td><a href="/suppliers/edit/{{Id}}" class ="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a>
  </td>
  <td><a href="/suppliers/delete/{{Id}}" class="btn btn-danger">
     <span class="glyphicon glyphicon-remove"></span> Delete 
     </a>
   </td>
   {{/if}}
</tr>
{{/suppliers}}

{{#no_suppliers}}
  <p>No products available yet. Add some above.</p>
{{/no_suppliers}}

</table>

